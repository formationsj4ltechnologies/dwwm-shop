{% extends 'base.html.twig' %}

{% block body %}
	{{ parent() }}
	<div class="d-md-flex flex-md-equal w-100 my-md-3 pl-md-3">
		<div class="bg-light mr-md-3 pt-3 px-3 pt-md-5 px-md-5 text-center overflow-hidden">
			<div class="my-3 p-3">
				<h2 class="display-5">{{ produit.nom }}</h2>
				<p class="lead">{{ produit.prix }}.</p>
			</div>
			<div class="bg-white shadow-sm mx-auto" style="width: 80%; height: 300px; border-radius: 21px 21px 0 0;">
				<img class="img-fluid" src="{{ vich_uploader_asset(produit, 'imageFile')|imagine_filter('produit') }}" alt="{{ produit.nom }}">
			</div>
		</div>
		<div class="bg-light mr-md-3 pt-3 px-3 pt-md-5 px-md-5 text-center overflow-hidden">
			<div class="my-3 py-3">
				<h2 class="display-5">Fiche Technique</h2>
			</div>
			<div class="bg-white shadow-sm mx-auto"
			     style="width: 80%; height: 300px; border-radius: 21px 21px 0 0;">
				<p>{{ produit.marque }}</p>
				<p>{{ produit.categorie }}</p>
				<p>{{ produit.cpu }}</p>
			</div>
		</div>
		<div class="bg-light mr-md-3 pt-3 px-3 pt-md-5 px-md-5 text-center overflow-hidden">
			<div class="my-3 py-3">
				<h2 class="display-5">Description</h2>
			</div>
			<div class="bg-white shadow-sm mx-auto"
			     style="width: 80%; height: 300px; border-radius: 21px 21px 0 0;">
				{{ produit.description | raw}}
			</div>
		</div>
	</div>
{% endblock %}

{% block title %}
	{{ titre_page }}
{% endblock %}

